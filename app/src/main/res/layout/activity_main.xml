<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content -->
    <LinearLayout
        android:id="@+id/main_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:background="@color/dark_background">

        <!-- Top bar with hamburger icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_hamburger"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/menu" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/onBackground"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.03" />
        </LinearLayout>

        <!-- 2x4 CardView grid -->
        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="6dp">

            <!-- Column 1: Temperature -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_temp"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/temperature"
                            android:contentDescription="@string/temperature"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/temperature"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Column 2: Length -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_length"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_length"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/length"
                            android:contentDescription="@string/length"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/length"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="6dp">

            <!-- Column 1: Volume -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_volume"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/volume"
                            android:contentDescription="@string/volume"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/volume"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Column 2: Weight -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_weight"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/weight"
                            android:contentDescription="@string/weight"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="6dp">

            <!-- Column 1: Speed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_speed"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/speed"
                            android:contentDescription="@string/speed"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speed"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Column 2: Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_time"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/time"
                            android:contentDescription="@string/time"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="6dp">

            <!-- Column 1: Area -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_area"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/area"
                            android:contentDescription="@string/area"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/area"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Column 2: Digital Storage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_storage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/card_background"
                    android:foreground="@drawable/card_ripple"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:id="@+id/iv_storage"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/digital_storage"
                            android:contentDescription="@string/digital_storage"
                            android:scaleType="centerCrop"
                            android:background="@drawable/img_round" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/digital_storage"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onBackground" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/card_background"
        app:itemTextColor="@color/onBackground"
        app:itemIconTint="@null"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search bar -->
            <LinearLayout
                android:id="@+id/drawer_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@string/search_icon"
                    app:tint="@color/onBackground"/>

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search"
                    android:paddingStart="8dp"
                    android:textColor="@color/onBackground"
                    android:textColorHint="@color/onBackground"/>
            </LinearLayout>

            <!-- Favourites -->
            <LinearLayout
                android:id="@+id/drawer_favourites"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star"
                    android:contentDescription="@string/favourites"
                    app:tint="@null"/>
                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favourites"
                    android:textColor="@color/onBackground"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/drawer_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/settings"
                    app:tint="@null"/>

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textColor="@color/onBackground"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Info & Help Center -->
            <LinearLayout
                android:id="@+id/drawer_info"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/info_help"
                    app:tint="@null"/>

                <TextView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_help"
                    android:textColor="@color/onBackground"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
